{
  "version": 2,
  "buildCommand": "pnpm run build:production",
  "framework": "nextjs",
  "installCommand": "pnpm install --frozen-lockfile",
  "functions": {
    "src/app/**/*.js": {
      "maxDuration": 30
    }
  },
  "regions": ["iad1"],
  "headers": [
    {
      "source": "/api/auth/(.*)",
      "headers": [
        {
          "key": "cache-control",
          "value": "no-store, max-age=0"
        },
        {
          "key": "x-robots-tag",
          "value": "noindex"
        }
      ]
    }
  ]
}
