# /Users/kuoldeng/projectx/frontend/pyfactor_next/.npmrc
node-linker=hoisted
shamefully-hoist=true
strict-peer-dependencies=false
legacy-peer-deps=true

# Ensure we can use modules with mixed formats
public-hoist-pattern[]=*webpack*
public-hoist-pattern[]=*babel*
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*process*
public-hoist-pattern[]=*constants-browserify*
public-hoist-pattern[]=*buffer*

# Fix for "exports is not defined" error
prefer-symlinked-executables=false
node-options=--no-warnings