{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"],
      "@app/*": ["./src/app/*"],
      "@components/*": ["./src/app/components/*"],
      "@layouts/*": ["./src/app/layouts/*"],
      "@styles/*": ["./src/styles/*"],
      "@lib/*": ["./src/lib/*"],
      "@utils/*": ["./src/utils/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@providers/*": ["./src/providers/*"],
      "@dashboard/*": ["./src/app/dashboard/*"],
      "@auth/*": ["./src/app/auth/*"],
      "@onboarding/*": ["./src/app/onboarding/*"],
      "@api/*": ["./src/app/api/*"],
      "@types/*": ["./src/types/*"],
      "@config/*": ["./src/config/*"],
      "@services/*": ["./src/services/*"],
      "@constants/*": ["./src/constants/*"],
      "@features/*": ["./src/features/*"],
      "@assets/*": ["./src/assets/*"],
      "@store/*": ["./src/store/*"],
      "@mutations/*": ["./src/mutations/*"],
      "@queries/*": ["./src/queries/*"],
      "@schemas/*": ["./src/schemas/*"],
      "@middleware/*": ["./src/middleware/*"],
      "@hoc/*": ["./src/hoc/*"],
      "@icons/*": ["./src/components/icons/*"],
      "@shared/*": ["./src/components/shared/*"]
    }
  },
  "include": [
    "next-env.d.js",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.mjs",
    "src/**/*.json",
    "./*.js",
    "./*.mjs",
    "./*.json"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "build",
    "dist",
    "coverage",
    "**/*.test.js",
    "**/*.test.jsx",
    "**/*.spec.js",
    "**/*.spec.jsx",
    "**/__tests__/**"
  ]
}