{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@app/*": ["./src/app/*"],
      "@components/*": ["./src/components/*"], // Changed from @app/components
      "@layouts/*": ["./src/layouts/*"], // Moved out of app
      "@styles/*": ["./src/styles/*"],
      "@lib/*": ["./src/lib/*"],
      "@utils/*": ["./src/utils/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@providers/*": ["./src/providers/*"],
      "@dashboard/*": ["./src/app/dashboard/*"],
      "@auth/*": ["./src/app/auth/*"],
      "@onboarding/*": ["./src/app/onboarding/*"],
      "@api/*": ["./src/app/api/*"],
      "@types/*": ["./src/types/*"],
      "@config/*": ["./src/config/*"],
      "@services/*": ["./src/services/*"],
      "@constants/*": ["./src/constants/*"],
      "@features/*": ["./src/features/*"],
      "@assets/*": ["./src/assets/*"],
      "@store/*": ["./src/store/*"],
      "@mutations/*": ["./src/mutations/*"],
      "@queries/*": ["./src/queries/*"],
      "@schemas/*": ["./src/schemas/*"],
      "@middleware/*": ["./src/middleware/*"],
      "@hoc/*": ["./src/hoc/*"],
      "@icons/*": ["./src/icons/*"], // Moved out of components
      "@shared/*": ["./src/shared/*"] // Moved out of components
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.mjs",
    "**/*.json",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "build",
    "dist",
    "coverage",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.test.js",
    "**/*.test.jsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.spec.js",
    "**/*.spec.jsx",
    "**/__tests__/**"
  ]
}