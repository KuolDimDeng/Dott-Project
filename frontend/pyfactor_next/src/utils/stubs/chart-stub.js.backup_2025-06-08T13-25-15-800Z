/**
 * Chart.js Stub
 * 
 * This stub provides mock implementations for Chart.js APIs
 * to prevent errors when the actual Chart.js library is not available.
 */

'use strict';

// Basic Chart class implementation
class Chart {
  constructor() {
    this.type = 'line';
    this.data = {};
    this.options = {};
  }
  
  destroy() {}
  update() {}
  render() {}
  stop() {}
  resize() {}
  clear() {}
  toBase64Image() { return ''; }
  getElementsAtEventForMode() { return []; }
  getDatasetMeta() { return {}; }
}

