const BubbleController = { id: 'bubble', defaults: {} };
const PieController = { id: 'pie', defaults: {} };
const ScatterController = { id: 'scatter', defaults: {} };

// Register function (does nothing)
function register() {}

// Scale class
const Scale = {
  extend: () => {},
};

// Additional chart elements and scales needed by the application
const ArcElement = { id: 'arc', defaults: {} };
const LineElement = { id: 'line', defaults: {} };
