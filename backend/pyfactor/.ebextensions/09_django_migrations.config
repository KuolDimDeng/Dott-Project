# Django Database Migrations Configuration
container_commands:
  01_django_migrate:
    command: "python manage.py migrate --noinput"
    leader_only: true
  02_django_collectstatic:
    command: "python manage.py collectstatic --noinput"
    leader_only: true
  03_create_superuser:
    command: "python manage.py shell -c \"from django.contrib.auth import get_user_model; User = get_user_model(); User.objects.filter(username='admin').exists() or User.objects.create_superuser('admin', 'admin@dottapps.com', 'admin123')\""
    leader_only: true
    ignoreErrors: true 