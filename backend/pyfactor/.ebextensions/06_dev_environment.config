option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: pyfactor.settings_dev_eb
    ENVIRONMENT: development
    ENABLE_DEBUG: true
  
  # Use smaller instance for development environment
  aws:autoscaling:launchconfiguration:
    InstanceType: t3.micro
  
  # Minimize costs with single instance
  aws:autoscaling:asg:
    MinSize: 1
    MaxSize: 1
  
  # Faster deployments for development
  aws:elasticbeanstalk:command:
    DeploymentPolicy: AllAtOnce
    BatchSize: 100
    BatchSizeType: Percentage
    
  # Enable enhanced health reporting but with less strict thresholds
  aws:elasticbeanstalk:healthreporting:system:
    SystemType: enhanced
    HealthCheckSuccessThreshold: Warning 