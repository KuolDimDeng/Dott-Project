container_commands:
  01_reload_nginx:
    command: "nginx -s reload"
    ignoreErrors: true
  
  02_test_nginx_config:
    command: "nginx -t"
    
  03_verify_nginx_running:
    command: |
      ps aux | grep nginx | grep -v grep || echo "Nginx not running"
      netstat -tlnp | grep :80 || echo "Port 80 not listening"
